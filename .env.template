# Environment
# Set to 'true' in production, leave empty for development
DDD_FORUM_IS_PRODUCTION=

# Security
# Change this to a secure random string in production
DDD_FORUM_APP_SECRET=defaultappsecret

# Database Type Selection
# Options: mysql | postgres | mongodb
DDD_FORUM_DB_TYPE=mongodb

# Database Configuration
# For local development, use 'localhost'
# For Docker, use the service name from docker-compose.yml (e.g., 'mongo', 'mysql', 'postgres')
DDD_FORUM_DB_HOST=localhost
DDD_FORUM_DB_PORT=
DDD_FORUM_DB_USER=tonysoprano
DDD_FORUM_DB_PASS=12345678

# Database Names
DDD_FORUM_DB_DEV_DB_NAME=data_dev
DDD_FORUM_DB_TEST_DB_NAME=data_test
DDD_FORUM_DB_PROD_DB_NAME=data_prod

# Redis Configuration
# Leave empty to use default localhost:6379
DDD_FORUM_REDIS_URL=
DDD_FORUM_REDIS_PORT=
